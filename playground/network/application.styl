@require "styles/figure"

html
  height:100%
  font-family: 'Lato', sans-serif
  color: hsla(2, 95%, 10%, 0.5)
  padding:0
  margin:0
  background-color: hsla(200, 95%, 10%, 0.5)

body
  margin:2vh 2vw

menu
  -webkit-padding-start:0

main
  & > section
    padding:2vh 0
    min-height:100vh

  & > article
    padding:0
    min-height:100vh

h1, h2, h3
  vertical-align: middle
  margin:0 0 2vw 0

menu
  margin:1vh 1vw 1vh 0

  & > a
    margin-right:2vw
    opacity:0.5


a
  text-decoration: none
  color:green

  &:hover
    transition: opacity 2s
    opacity:1

/* set font sizes */
landscape
html
  font-size:3vws

h1
  font-size:11vw

h2
  font-size:6vw

h3
  font-size:5vw

main > a
  font-size:5vw

figcaption > p
  font-size:4vw


a.selected
  font-size:8vw


menu > a
  font-size: 7vw


main > menu
  margin-top:4vw


main > menu > a
  font-size: 7vw
  margin-bottom: 7vw
  display: block



@media (orientation: landscape)

  html
    font-size:3vh


  body > header
  body > main
    margin: 0 auto
    max-width: 90vh

  h1
    font-size:7vh
    opacity:0.85

  h2
    font-size:5vh

  h3
    font-size:4vh



  main > a
    font-size:5vh

  figcaption > p
    font-size:3vh

  menu > a
    font-size: 7vh


  main > menu > a
    font-size: 5vh
    margin-bottom: 4vh


  a.selected
    font-size:8vh
